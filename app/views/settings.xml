<Alloy>
    <Window id="win" class="vertical" title="Settings">
        <TableView class="tableview-form" platform="ios">
            <TableViewSection>
                <TableViewRow><View class="view-row-separator"/></TableViewRow>
                <TableViewRow><Button id="changeNetworkBtn"></Button></TableViewRow>
            </TableViewSection>
            <TableViewSection>
                <HeaderView>
                    <View class="view-headerview-form" >
                        <Label class="label-tableviewsection-header" text="SETTINGS" />
                        <View class="view-row-separator" />
                    </View>
                </HeaderView>
                <TableViewRow><TextField id="server" inputType="text" title="" hintText="Server IP/DNS" /></TableViewRow>
                <TableViewRow><TextField id="method" inputType="text" title="" hintText="HTTP or HTTPS" /></TableViewRow>
                <TableViewRow><TextField id="port" inputType="text" title="" hintText="Port" /></TableViewRow>
                <TableViewRow><TextField id="username" inputType="text" title="" hintText="Username" /></TableViewRow>
                <TableViewRow><TextField id="password" inputType="text" title="" hintText="Password" passwordMask="true"/></TableViewRow>
                <TableViewRow><View class="view-row-separator"/></TableViewRow>
            </TableViewSection>
            <TableViewSection>
                <TableViewRow><Button id="getListOfDevicesBtn">Update Devices</Button></TableViewRow>
                <TableViewRow><Button id="clearData">Clear Data</Button></TableViewRow>
                <TableViewRow><Button id="closeBtn">Save and Close</Button></TableViewRow>
            </TableViewSection>
        </TableView>
        <TableView class="tableview-form" platform="android">
            <TableViewRow><Button id="changeNetworkBtn"></Button></TableViewRow>
            <TableViewRow><View class="view-row-separator"/></TableViewRow>
            <TableViewRow><Label class="label-tableviewsection-header" text="SETTINGS" /></TableViewRow>
            <TableViewRow><TextField id="server" inputType="text" title="" hintText="Server IP/DNS" /></TableViewRow>
            <TableViewRow><TextField id="method" inputType="text" title="" hintText="HTTP or HTTPS" /></TableViewRow>
            <TableViewRow><TextField id="port" inputType="text" title="" hintText="Port" /></TableViewRow>
            <TableViewRow><TextField id="username" inputType="text" title="" hintText="Username" /></TableViewRow>
            <TableViewRow><TextField id="password" inputType="text" title="" hintText="Password" passwordMask="true"/></TableViewRow>
            <TableViewRow><View class="view-row-separator"/></TableViewRow>
            <TableViewRow><Button id="getListOfDevicesBtn">Update Devices</Button></TableViewRow>
            <TableViewRow><Button id="clearData">Clear Data</Button></TableViewRow>
            <TableViewRow><Button id="closeBtn">Save and Close</Button></TableViewRow>
        </TableView>
    </Window>
</Alloy>

