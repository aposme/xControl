<Alloy>
    <TableViewRow class="lightRow">
        <View id="lightContainer">
            <Button id="btn" class="btnOff" title="{displayName}" address="{address}"/>
            <View class="sliderContainer" type="{type}">
                <Slider id="slider" address="{address}" />
                <Label id="sliderLbl" />
            </View>
        </View>
        <View id="sceneContainer" class="horizontal">
            <Label id="sceneLbl" text="{displayName}"></Label>
            <Button id="sceneBtnOn" class="sceneBtn" title="On" address="{address}"/>
            <Button id="sceneBtnOff" class="sceneBtn" title="Off" address="{address}"/>
        </View>
        <Label id="group" class="group" text="{displayName}" />
    </TableViewRow>
</Alloy>